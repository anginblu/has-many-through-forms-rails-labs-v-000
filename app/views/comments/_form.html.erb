<h2>Create comments </h2>

<%= form_for @comment do |f| %>
<p>
  <%= f.label "Content" %>
  <input type="text" name="comment[content]" id="comment_content"><br>
  <!-- <%= f.text_field :content %><br> -->
</p>
<p>
  <%= f.collection_select :user_id, User.all, :id, :username, {include_blank: 'None'} do |user| %>
    <%= user.label "New Username" %>
    <%= user.check_box %>
  <% end %>
</p>
<p>
  <%= f.fields_for :user, @comment.build_user do |user_fields| %>
    <%= user_fields.label "New Username" %>
    <%= user_fields.text_field :username %>
  <% end %>
</p>

  <%= f.submit class: 'btn btn-default' %>
<% end %>
