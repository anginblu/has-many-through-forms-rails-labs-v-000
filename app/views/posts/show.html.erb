<h2><%= @post.title %></h2>
<h3>Content: <%= @post.content %> </h3>

<p>
<ul>
  <% @comments.each do |i| %>
    <li><%= i.content %></li>
  <% end %>
</ul>

<ul>
  <% @users.uniq.each do |user| %>
    <li><%= link_to user.username, user %></li>
  <% end %>
</ul>

<ul>
  <% @categories.each do |i| %>
    <li><%= i.name %></li>
  <% end %>
</ul>
</p>
<p>
  Add a new comment:<br>
  <%= form_for(@post) do |f| %>
    <%= f.fields_for :comments do |builder| %>
    <%= render '/comments/form', :f => builder %>
    <% end %>
  <% end %>
</p>